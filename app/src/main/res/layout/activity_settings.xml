<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_general"
    tools:context=".SettingsActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/IDPasswordSubhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:text="@string/IDPassword"
        android:textColor="@color/sky"
        android:textSize="@dimen/subheader_text_size"
        app:layout_constraintStart_toStartOf="@+id/BackButton"
        app:layout_constraintTop_toBottomOf="@+id/QRCodeListView" />

    <TextView
        android:id="@+id/IDPasswordPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:text="@string/DefaultPasswordPreview"
        android:textColor="@color/cloud"
        android:textSize="@dimen/instruction_text_size"
        app:layout_constraintStart_toStartOf="@+id/IDPasswordSubhead"
        app:layout_constraintTop_toBottomOf="@+id/IDPasswordSubhead" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_states"
        android:drawableLeft="@drawable/left"
        android:drawablePadding="@dimen/drawable_padding"
        android:fontFamily="@font/open_sans"
        android:text="@string/GoBack"
        android:textColor="@drawable/text_states"
        android:textSize="@dimen/button_text_size"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/IDResetApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:text="@string/ResetID"
        android:textColor="@color/sky"
        android:textSize="@dimen/subheader_text_size"
        app:layout_constraintStart_toStartOf="@+id/BackButton"
        app:layout_constraintTop_toBottomOf="@+id/IDPasswordPreview" />

    <Button
        android:id="@+id/ClearQRCodesButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_states"
        android:drawableStart="@drawable/trash_states"
        android:drawablePadding="@dimen/bootstrap_alert_paddings"
        android:fontFamily="@font/open_sans"
        android:text="Clear QR Codes"
        android:textColor="@drawable/text_states"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="@+id/IDSettingsDirections"
        app:layout_constraintTop_toBottomOf="@+id/IDSettingsDirections" />

    <TextView
        android:id="@+id/IDSettingsDirections"
        android:layout_width="541dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/open_sans_italic"
        android:text="@string/ResetDirections"
        android:textColor="@drawable/text_states"
        android:textSize="@dimen/instruction_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/IDResetApp"
        app:layout_constraintTop_toBottomOf="@+id/IDResetApp" />

    <Button
        android:id="@+id/LocalStorageResetButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_states"
        android:drawableStart="@drawable/trash_states"
        android:drawablePadding="@dimen/bootstrap_alert_paddings"
        android:fontFamily="@font/open_sans"
        android:text="@string/ResetButton"
        android:textColor="@drawable/text_states"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="@+id/IDSettingsDirections"
        app:layout_constraintTop_toBottomOf="@+id/IDSettingsDirections" />

    <Button
        android:id="@+id/ChangePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginEnd="116dp"
        android:background="@drawable/button_states"
        android:fontFamily="@font/open_sans"
        android:text="@string/CreatePassword"
        android:textColor="@color/text_states"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/IDPasswordPreview"
        app:layout_constraintEnd_toEndOf="@+id/QRCodeListView"
        app:layout_constraintTop_toTopOf="@+id/IDPasswordSubhead"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/IDSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:text="@string/SettingsTitle"
        android:textColor="@drawable/text_header_states"
        android:textSize="@dimen/header_text_size"
        app:layout_constraintStart_toStartOf="@+id/BackButton"
        app:layout_constraintTop_toBottomOf="@+id/BackButton" />

    <TextView
        android:id="@+id/IDSettingsDirections2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:text="@string/SettingsWarning"
        android:textColor="@color/banana"
        android:textSize="@dimen/alt_subheader_text_size"
        app:layout_constraintTop_toBottomOf="@+id/IDSettings"
        tools:layout_editor_absoluteX="164dp" />

    <TextView
        android:id="@+id/IDQrCodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:gravity="center"
        android:text="@string/AvailableQRCodes"
        android:textColor="@color/sky"
        android:textSize="@dimen/subheader_text_size"
        app:layout_constraintStart_toStartOf="@+id/IDSettings"
        app:layout_constraintTop_toBottomOf="@+id/IDSettingsDirections2" />

    <ListView
        android:id="@+id/QRCodeListView"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@color/darkgray"
        android:divider="@null"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/IDQrCodes"
        app:layout_constraintTop_toBottomOf="@+id/IDQrCodes" />

</androidx.constraintlayout.widget.ConstraintLayout>